<h1>Records</h1>

<p><a href="/records/new">Add a new record</a></p>
<% @artists.each do |artist| %>
<p><%= artist.name  %></p>
  <% @records.each do |record| %>
    <% if record.artist_id == artist.id %>
    <p>Title: <a href="/records/show/<%= record.id %>"><%= record.title() %></a> Click on quantity to adjust stock: <a href="/records/<%= record.id %>"><%= record.quantity %></a></p><br>
    <% end %>
  <% end %>
<% end %>
