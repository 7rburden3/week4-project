<h2><%= @artists.name %></h2>

<form action="/artists" method="POST">


<% @records.each do |record| %>
  <% if record.artist_id == @artists.id %>
  <p>Title: <%= record.title %>
  Quantity: <%= record.quantity%>
  <% end %>
<% end %>

</form>

<form action="/artists/<%= @artists.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
