<h1>Add a new Genre to the database.</h1>

<form action="/genres" method="POST">
  <label for="genre">Enter Genre to be added: </label>
  <input type="text" name="genre" id="genre"/>
  <input type="submit" value="Add Genre"/>
</form>
<br>
<table>
  <thead>
    <tr>
      <th>Genre</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @genre.each do |genre| %>

    <tr>
      <td><%= genre.genre %></td>
      <td><form action="/genres/<%= genre.id %>/delete" method="POST"><input type="submit" value="Delete"></form></td>
    </tr>

    <% end %>
  </tbody>
</table>


<br>
